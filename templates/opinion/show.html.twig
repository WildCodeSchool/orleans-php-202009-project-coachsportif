{% extends 'layout_admin.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('adminOpinion') }}
{% endblock %}
{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1 class="title text-info text-center">Commentaire</h1>
        <div class="container">
            <table class="table text-dark text-center">
                <thead class="thead-light">
                    <tr>
                        <th>Auteur</th>
                        <th>Commentaire</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ opinion.author }}</td>
                        <td>{{ opinion.comment }}</td>
                        <td>
                            <a href="{{ path('opinion_index') }}">Retour</a>
                            <a href="{{ path('opinion_edit', {'id': opinion.id}) }}">edit</a>
                            {{ include('opinion/_delete_form.html.twig') }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
{% endblock %}
