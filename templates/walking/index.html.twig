{% extends 'layout.html.twig' %}

{% block body %}
    <section class="nordic-walking">
        <h1>La marche nordique</h1>
        <div class="container-fluid">
            {% for walk in walkings %}
                <div class="row justify-content-center">
                    <p class="walkingParagraph text-center col-8 py-2">{{ walk.description }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="bg-dark container-fluid py-5">
            {% for walk in walkings %}
                <div class="row justify-content-around">
                    <img class="col-6 walkingPicture my-4 p-0" src="{{ asset('/uploads/walking/' ~ walk.picture) }}" alt="Images marche nordique">
                </div>
            {% endfor %}
            <div class="text-center pt-4">
                <a class="calendarButton btn btn-primary" href="{{ path('walking_calendar') }}" target="_blank">Planning</a>
            </div>
        </div>
        <div class="container d-flex justify-content-center pt-5">
            <div class="walkingSubmitParagraph row">
                <p>Si vous-êtes intéressé, il vous suffit de remplir un formulaire en ligne, simple et rapide !</p>
            </div>
        </div>
        <div class="text-center">
            <a class="calendarButton btn btn-primary" href="{{ path('walking_calendar') }}" target="_blank">Planning</a>
        </div>
    </section>

    <section id="carousel-opinion" class="carouselFitness carousel slide pb-0" data-ride="carousel">
        <h2 class="text-center p-5">Les avis</h2>
        <div class="carousel-inner">
            {% for opinion in opinions %}
                <div class="carousel-item  {% if loop.index0 == 0 %} active {% endif %}">
                    <div class="container">
                        <p class="mb-4">{{ opinion.comment }}</p>
                        <p class="opinionAuthor lead">{{ opinion.author }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carousel-opinion" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Précèdent</span>
        </a>
        <a class="carousel-control-next" href="#carousel-opinion" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
        </a>
    </section>
{% endblock %}
