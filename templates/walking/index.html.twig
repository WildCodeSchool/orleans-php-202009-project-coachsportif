{% extends 'layout.html.twig' %}

{% block body %}
    <section class="nordic-walking">
        <h1>Qu'est-ce que la marche nordique ?</h1>
        <div class="container">
            {% for walk in walkings %}
                <div class="row justify-content-between">
                    <div class="col-lg-5">
                        <img src="{{ asset('uploads/' ~ walk.picture) }}">
                    </div>
                    <p class="col-lg-5">{{ walk.description }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="walk-submit">
            <p>Si vous êtes intéressé, il suffit de remmplir un formulaire en ligne, simple et rapide !</p>
            <a href="#" class="btn btn-primary btn m-3">S'inscrire</a>
        </div>
    </section>
{% endblock %}
