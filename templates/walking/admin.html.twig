{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('adminWalking') }}
{% endblock %}

{% block body %}
    <section class="admin-walking">
        <h1>Marche nordique</h1>
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-5 offset-7">
                    <a class="btn btn-secondary" href="{{ path('walking_new') }}">Nouvelle rubrique</a>
                </div>
            </div>

            {% for walking in walkings %}
                <div class="row justify-content-between">
                    <div class="picture col-12 mb-2 col-lg-4">
                        <img src="{{ asset('uploads/' ~ walking.picture) }}">
                    </div>
                    <p class="col-12 col-lg-5">{{ walking.description }}</p>
                    <div class="col-6 col-lg-1">
                        <a class="btn btn-secondary" href="{{ path('walking_edit', { id: walking.id }) }}">Modifier</a>
                    </div>
                    <div class="delete col-lg-1">
                        {{ include('walking/_delete_form.html.twig') }}
                    </div>
                </div>
                <hr>
            {% endfor %}
        </div>
        <div class="text-center">
            <a class="btn btn-secondary btn" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </section>
{% endblock %}
