{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
<div class="container form">
    <div class="row">
        <div class="col">
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col mt-3 submit">
            <button class="btn btn-secondary">{{ button_label|default('Sauvegarder') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}
