{% extends 'base.html.twig' %}

{% block title %}Administration|Présentation{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1>Administration page d'accueil</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Texte de présentation :</th>
                    <td>{{ home.text }}</td>
                </tr>
                <tr>
                    <th>Image :</th>
                    <td>{{ home.picture }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-secondary btn m-3" href="{{ path('home_edit', {'id': home.id}) }}">Modifier</a>

        <div class="row justify-content-center">
            <a class="btn btn-secondary btn-lg m-3" href="{{ path('index_Admin') }}">Retour</a>
            {{ include('home/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
