<form method="post" action="{{ path('home_delete', {'id': home.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le texte ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ home.id) }}">
    <button class="btn btn-secondary btn-lg m-3">Supprimer</button>
</form>
