{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>Size</th>
                <th>Weight</th>
                <th>FatMass</th>
                <th>BodyWater</th>
                <th>MuscleMass</th>
                <th>ArmCircumference</th>
                <th>WaistSize</th>
                <th>ThighCircumference</th>
                <th>RuffierDickstonTest</th>
                <th>Three</th>
                <th>Pathology</th>
                <th>Treatment</th>
                <th>Prescription</th>
                <th>Imc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.size }}</td>
                <td>{{ user.weight }}</td>
                <td>{{ user.fatMass }}</td>
                <td>{{ user.bodyWater }}</td>
                <td>{{ user.muscleMass }}</td>
                <td>{{ user.armCircumference }}</td>
                <td>{{ user.waistSize }}</td>
                <td>{{ user.thighCircumference }}</td>
                <td>{{ user.ruffierDickstonTest }}</td>
                <td>{{ user.three }}</td>
                <td>{{ user.pathology }}</td>
                <td>{{ user.treatment }}</td>
                <td>{{ user.prescription }}</td>
                <td>{{ user.imc }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="22">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
