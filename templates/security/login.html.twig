{% extends 'base.html.twig' %}

{% block title %}Connectez-Vous!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                            déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center ">Veuillez vous connecter</h1>
                <label class="pt-4" for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control justify-content-center" required autofocus>
                <label class="pt-4" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3 justify-content-center text-center">
                    <label class="pt-3">
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

                <div class="text-center">
                <button class="btn btn-secondary btn-lg justify-content-center text-center" type="submit">
                    Se connecter
                </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
