<form method="post" action="{{ path('carousel_delete', {'id': carousel.id}) }}"
      onsubmit="return confirm('Êtes-vous sur de vouloir supprimé cette image?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
    <button class="btn btn-danger btn-lg mt-2">Supprimé</button>
</form>
