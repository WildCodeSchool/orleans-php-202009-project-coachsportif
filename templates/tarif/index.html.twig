{% extends 'layout.html.twig' %}
{% block carousel %}{% endblock %}
{% block title %}Tarifs{% endblock %}

{% block body %}
    <section>
        <h1 class="title text-center text-dark">Tarifs</h1>
            <div class="container-fluid">
                <div class="row text-center justify-content-center mb-4">
                    {% for tariff in tariffs %}
                        <div class="card m-4">
                            <div class="card-body">
                                <h2 class="h3 card-title">{{ tariff.title }}</h2>
                                <p class="card-text">
                                    {{ tariff.description }}
                                </p>
                            </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item text-warning bg-dark">{{ tariff.price }} €</li>
                                </ul>
                            <div class="card-body d-flex justify-content-between mt-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                         fill="currentColor" class="bi bi-person-fill"
                                         viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/></svg>
                                    <p>Séances 100% sur-mesure</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        <div class="d-flex justify-content-center">
            <a class="fitnessButton btn btn-primary btn m-4" href="{{ path('contact_show') }}">Envoyer un e-mail</a>
        </div>
    </section>
{% endblock %}
