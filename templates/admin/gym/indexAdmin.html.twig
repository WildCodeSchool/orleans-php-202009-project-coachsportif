{% extends 'layout_admin.html.twig' %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('indexAdmin') }}
    {% endblock %}
{% block title %}Administration Salle d'entrainement{% endblock %}

{% block body %}
    <h1 class="title text-center mt-4">Administration salle d'entrainement</h1>
    <div class="container">
        <a class="btn btn-success btn mb-2" href="{{ path('gym_new') }}">Ajouter un texte</a>
        <table class="table text-dark">
            <thead class="thead-light text-center">
            <tr>
                <th>Texte partie Remise en forme</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for gymtext in gymtexts %}
                <tr>
                    <td>{{ gymtext.GymText| raw }}</td>
                    <td>
                        <a class="col btn btn-primary mb-sm-2 mb-2 btn"
                           href="{{ path('gym_edit', {'id': gymtext.id}) }}">
                            Modifier</a>
                        {{ include('admin/gym/_delete_form.html.twig') }}
                    </td>
                </tr>


            {% else %}
                <tr>
                    <td colspan="3">Il n'y a aucun r√©sultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary btn mb-4" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
