{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('indexAdmin') }}
{% endblock %}

{% block title %}Séance{% endblock %}
{% block body %}
    <h1 class="text-center mt-4">Séance</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10 card text-center p-0">
                <div class="card-body bg-light text-center">
                    <h2 class="h3 card-title">{{ calendar.title }}</h2>
                    <p class="card-text"></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ calendar.id }}</li>
                    <li class="list-group-item">
                        <p>Date de la séance</p>
                        {{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}
                    </li>
                    <li class="list-group-item">
                        <p>Heure de fin de la séance</p>
                        {{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}
                    </li>
                </ul>
                <div class="card-body">
                    <p>{{ calendar.description }}</p>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary mx-2 mb-sm-2 mb-2"
                       href="{{ path('calendar_edit', {'id': calendar.id}) }}">Modifier</a>
                    {{ include('admin/calendar/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
        <div class="text-center">
            <a class="btn btn-secondary btn m-4" href="{{ path('calendar_list') }}">Retour</a>
        </div>
    </div>
{% endblock %}
