{% extends 'layout_admin.html.twig' %}


{% block title %}Calendar index{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Liste des Rendez-vous</h1>

<div class="container">
    <a class="btn btn-success mb-2" href="{{ path('calendar_new') }}">Ajouter un nouveau rendez-vous</a>
    <table class="table text-dark text-center">
        <thead class="thead-light">
            <tr>
                <th>N°</th>
                <th>Titre</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Couleur de fond</th>
                <th>Couleur du texte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.id }}</td>
                <td>{{ calendar.title }}</td>
                <td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.description }}</td>
                <td>{{ calendar.backgroundColor }}</td>
                <td>{{ calendar.textColor }}</td>
                <td> <div class="row justify-content-center">
                    <a href="{{ path('calendar_show', {'id': calendar.id}) }}">show</a>
                    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="text-center">
        <a class="btn btn-secondary btn mt-2" href="{{ path('calendar_list') }}">Retour</a>
    </div>
{% endblock %}
