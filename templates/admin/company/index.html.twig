{% extends 'layout_admin.html.twig' %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('indexAdmin') }}
    {% endblock %}
{% block title %}Company index{% endblock %}

{% block body %}
    <h1 class="title text-center mt-4">Company index</h1>
        <div class="container">
            <a class="btn btn-success btn mb-2" href="{{ path('company_new') }}">Ajouter un texte</a>
            <table class="table text-dark">
                <thead class="thead-light text-center">
                    <tr>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.description }}</td>
                        <td>
                            <a class="col btn btn-primary mb-sm-2 mb-2 btn"
                               href="{{ path('company_edit', {'id': company.id}) }}">Modifier</a>
                            {{ include('admin/company/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    <div class="text-center">
        <a class="btn btn-secondary btn mt-2" href="{{ path('admin_index') }}">Retour</a>
    </div>
{% endblock %}
