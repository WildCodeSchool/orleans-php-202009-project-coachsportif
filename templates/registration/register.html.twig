{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}

{% block title %}Enregistrer un nouveau compte{% endblock %}

{% block body %}
    {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
        <div class="container">
            <h1 class="mb-3 font-weight-normal text-center ">Enregistrer un nouveau compte</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="text-center">
                    <button class="btn btn-secondary btn" type="submit">Cr√©er le compte</button>
                </div>
                {{ form_end(registrationForm) }}
        </div>
{% endblock %}
